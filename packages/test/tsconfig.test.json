{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "ES2022",
    "target": "ES2022",
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": ["./src", "./test"],
  "ts-node": {
    "esm": true
  }
}
